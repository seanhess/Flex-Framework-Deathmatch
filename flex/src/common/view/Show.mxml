<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%">
	
	<mx:Script>
		<![CDATA[
			import common.model.Definition;
			
			[Bindable] public var definition:Definition;
		]]>
	</mx:Script>
	
	<mx:Form>
		<mx:FormItem label="Word">
			<mx:Label text="{definition.word}"/>
		</mx:FormItem>
		
		<mx:FormItem label="Definition">
			<mx:Text text="{definition.definition}"/>
		</mx:FormItem>
		
		<mx:FormItem>
			<mx:Button label="Go Back"/>
		</mx:FormItem>
	</mx:Form>
	
</mx:VBox>
